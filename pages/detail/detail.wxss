page{
  background-color: #c9f4f7;
}
.container {  
  padding: 20rpx;  
}  
  
.header {  
  text-align: center;  
  margin-bottom: 30rpx;  
}  
  
.title {  
  font-size: 32rpx;  
  font-weight: bold;  
  color: #333;  
}  
  
.swiper-container {  
  width: 100%;  
  overflow: hidden;  
  position: relative;  
}  
  
.swiper {  
  width: 100%;  
  height: 300rpx;  
  box-sizing: border-box;  
}  
  
.slide-image {  
  width: 100%;  
  height: 100%;  
  object-fit: cover;  
}  
  
.content {  
	margin-bottom: 30rpx;  
	margin-top: 30rpx;
}  
  
.intro {  
  font-size: 30rpx;  
  line-height: 54rpx;  
	color: #666; 
	text-indent: 20rem;
}  
  
.comments-container {  
  background-color: #f5f5f5;  
  padding: 20rpx;  
  margin-bottom: 50rpx;  
}  
  
.comments-title {  
  font-size: 30rpx;  
  font-weight: bold;  
  color: #333;  
  margin-bottom: 10rpx;  
}  
  
.comments-list {  
  padding: 20rpx 20rpx;  
}  
  
.comment-item {  
  display: flex;  
  flex-direction: column;  
	margin-bottom: 20rpx;  
	padding: 10px;
}  
  
.comment-user {  
  display: flex;  
  justify-content: space-between;  
  align-items: center;  
  margin-bottom: 10rpx;  
}  
  
.username {  
  font-weight: bold;  
  color: #333;  
}  
  
.time {  
  font-size: 20rpx;  
  color: #999;  
}  
  
.comment-content {  
  font-size: 28rpx;  
	color: #666;  
	width: 600rpx;
}

.bottom-bar {  
  display: flex;  
  justify-content: space-between;  
  align-items: center;  
  padding: 10rpx;  
  background-color: #fff;  
  position: fixed;  
  bottom: 0;  
  width: 100%;  
  box-shadow: 0 -2rpx 5rpx rgba(0, 0, 0, 0.1);  
}  
  
.collect-btn {  
  width: 50rpx; /* 根据图片尺寸调整 */  
  height: 50rpx; /* 根据图片尺寸调整 */  
  margin-right: 10rpx; /* 与输入框之间留一些间距 */  
  background-color: transparent; /* 确保背景透明 */  
}  
  
.comment-input-container {  
  flex: 1;  
	position: relative;  
}  
  
.comment-input {  
  width: 500rpx;  
	height: 30rpx;  
	margin-left: 15rpx;
  padding: 10rpx;  
  border: 1rpx solid #ccc;  
  border-radius: 5rpx;  
}  
  
.submit-btn {  
	margin-left: 20rpx;
	margin-right: 20rpx;
  width: 50rpx;  
  height: 50rpx;  
  line-height: 20rpx;  
  text-align: center;  
  background-color: #007aff;  
  color: #fff;  
  border-radius: 5rpx;  
}

.collect-btn.active {  
  opacity: 0.8; /* 或者其他你想要的视觉效果 */  
}


