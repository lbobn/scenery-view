<view class="container">  
  <view class="header">  
    <text class="title">{{spot.name}}</text>  
  </view>  
    
  <view class="swiper-container">  
    <swiper  circular  class="swiper" autoplay="{{true}}" interval="{{3000}}" duration="{{500}}">  
      <block wx:for="{{spot.images}}" wx:key="index">  
        <swiper-item>  
          <image class="slide-image" src="{{item}}" mode="aspectFill" />  
        </swiper-item>  
      </block>  
    </swiper>  
  </view>  
    
  <view class="content">  
    <text class="intro">{{spot.introduce}}</text>  
  </view>  
    
  <view class="comments-container">  
    <text class="comments-title">用户评论：</text>  
    <button class="wordcloud" type="primary" size="mini" bindtap="getWordcloud">词云图</button>
    <view class="comments-list">  
      <block wx:for="{{comments}}" wx:key="index">  
        <view class="comment-item">  
          <view class="comment-user">  
            <text class="username">{{item.nickname}}</text>  
            <text class="time">{{item.create_time}}</text>  
          </view>  
          <text class="comment-content">{{item.comment}}</text>  
        </view>  
      </block>  
    </view>  
	
  </view>  
	
</view>
<!-- 底部组件 -->  
<view class="bottom-bar">  
<block wx:if="{{like === true}}">
	<image class="collect-btn" 		src="../../img/like.png" bindtap="handleCollect" />
</block>
<block wx:else>
	<image class="collect-btn" 		src="../../img/unlike.png" bindtap="handleCollect" />
</block>
     
    <view class="comment-input-container">  
      <input class="comment-input" placeholder="请输入评论内容" bindinput="handleCommentInput" value="{{commentContent}}" />  
    </view>  
    <button class="submit-btn" size="mini" bindtap="submitComment">提交</button>  
  </view>  

  <modal hidden="{{hidden}}" title="词云图" confirm-text="确定" cancel-text="取消" bindcancel="cancel" bindconfirm="confirm" no-cancel="{{nocancel}}">
       <view>
        <image class="image" src="{{wordcloudsrc}}" mode='aspectFill'></image>
      </view>
      <!-- <view class="fontSize">长按识别二维码</view> -->
      <!-- <view class="fontSize">添加小助手微信咨询</view> -->
</modal>

